import random

def wuerfeln():
    versuche = 0
    max_versuche = 3
    
    while versuche < max_versuche:
        # Wurf einer zufÃ¤lligen Zahl zwischen 1 und 6
        zahl = random.randint(1, 6)
        versuche += 1
        
        print(f"Wurf {versuche}: {zahl}")
        
        if zahl == 6:
            print("Die Figur ist raus! (6 geworfen)")
            return  # Wenn eine 6 geworfen wird, ist die Funktion sofort zu Ende.
    
    print("Maximale Versuche erreicht. Keine 6 geworfen.")

# Funktion aufrufen
wuerfeln()
