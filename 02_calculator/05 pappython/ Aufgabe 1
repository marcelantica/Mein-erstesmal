Kartenstapel = ["gr7","gl2","+4","bl3"]
while len (Kartenstapel) !=0:
    print (Kartenstapel)
    aktuelleKarte = Kartenstapel.pop(0)

    if aktuelleKarte == "+4" :
        print ("+4 kann gespielt werden")
        break
if len (Kartenstapel) == 0:
    print("Stapel ist leer")
else:
    print ("Stapel ist nicht leer")



